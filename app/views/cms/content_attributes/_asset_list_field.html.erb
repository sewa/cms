<%= asset_destroy_input attribute, component_idx: component_idx %>

<div class="columns small-2">
  <%= content_label attribute, component_idx: component_idx %>
</div>

<div class="columns small-10">
  <ul class="drop-zone <%= scope %>" data-name="<%= content_field_name(attribute.key, array: true, component_idx: component_idx) %>">
    <%= hidden_field_tag content_field_name(attribute.key, array: true, component_idx: component_idx), '' %>
    <% attribute.value.each do |asset| %>
      <%= render 'cms/shared/asset_field', asset: asset, name: content_field_name(attribute.key, array: true, component_idx: component_idx) %>
    <% end %>
    <%= attribute_errors(object, attribute) %>
  </ul>
</div>
